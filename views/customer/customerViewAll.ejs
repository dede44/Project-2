<html>
    <head>
        <title>Customers</title>
    </head>
    <body>
        <h1>Customers</h1>
        <a href="/customer/add">Add New Customer</a> <br />

        <br />

        <table border="1">
            <tr><th>Name</th><th>Phone Number</th></tr>
            <% for(var i=0; result.length > i; i++ ) { %>
            <tr>
                <td><a href="/customer/?customer_id=<%= result[i].customer_id %>"><%= result[i].first_name %></a></td>
                <td><%= result[i].phone_number %></td>

                <td><form action="/customer/delete/">
                        <input type="hidden" name="customer_id" id="customer_id" value="<%= result[i].customer_id %>" />
                        <input type="submit" value="Delete"/>
                        <button onclick="event.preventDefault();window.location.href='/customer/edit2/?customer_id=<%= result[i].customer_id %>'">Edit</button>

                    </form>
                </td>
            </tr>
            <% } %>
        </table>
    </body>

</html>